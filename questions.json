        st.markdown(f"### {badge_color}")
    
    # Display question based on type
    if question_type == "mcq":
        st.markdown(f"**{q.get('text', '')}**")
        
        # MCQ Options
        selected = st.radio(
            "Select your answer:",
            options=range(len(q.get("options", []))),
