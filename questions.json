            key=f"mcq_{idx}",
            disabled=st.session_state[STATE_KEYS["answer_submitted"]]
        )
        
        if st.button("Submit Answer", disabled=st.session_state[STATE_KEYS["answer_submitted"]] or 
                     st.session_state[STATE_KEYS["time_remaining"]] <= 0):
